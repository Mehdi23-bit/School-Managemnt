<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- List all your entity classes -->
        <class>org.school.entities.Major</class>
        <class>org.school.entities.Classe</class>
        <class>org.school.entities.Student</class>
        <class>org.school.entities.Professor</class>
        <class>org.school.entities.Subject</class>
        <class>org.school.entities.Admin</class>
        <class>org.school.entities.Note</class>
        <class>org.school.entities.User</class>
        
        <properties>
            <!-- Properties will be overridden in test -->
        </properties>
    </persistence-unit>
</persistence>