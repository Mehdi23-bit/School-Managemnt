<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.school.controllers.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="350"
      style="-fx-background-color: linear-gradient(to bottom, #f5f7fa 0%, #e8edf2 100%);
             -fx-font-family: 'Segoe UI', 'Arial', sans-serif;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <!-- Title -->
    <Label text="School Management System"
           style="-fx-font-size: 24px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #1a237e;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
    
    <!-- Subtitle -->
    <Label text="Please sign in to continue"
           style="-fx-font-size: 13px;
                  -fx-text-fill: #5f6368;
                  -fx-padding: 0 0 10 0;"/>
    
    <!-- Message label (error / info) -->
    <Label fx:id="messageLabel"
           style="-fx-font-size: 13px;
                  -fx-text-fill: #d32f2f;
                  -fx-background-color: #ffebee;
                  -fx-background-radius: 4;
                  -fx-padding: 8 12 8 12;
                  -fx-border-color: #ef9a9a;
                  -fx-border-radius: 4;
                  -fx-border-width: 1;"/>
    
    <!-- Login form card -->
    <VBox spacing="16" 
          style="-fx-background-color: white;
                 -fx-background-radius: 8;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);
                 -fx-padding: 30;">
        
        <GridPane hgap="10" vgap="14">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="80"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            
            <Label text="Username:"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #424242;
                          -fx-font-weight: 500;"/>
            
            <TextField fx:id="usernameField"
                       promptText="Enter your username"
                       GridPane.columnIndex="1"
                       style="-fx-pref-height: 38px;
                              -fx-background-color: #f8f9fa;
                              -fx-background-radius: 6;
                              -fx-border-color: #e0e0e0;
                              -fx-border-radius: 6;
                              -fx-border-width: 1;
                              -fx-font-size: 14px;
                              -fx-padding: 0 12 0 12;
                              -fx-prompt-text-fill: #9e9e9e;
                              -fx-focus-color: #2196F3;
                              -fx-faint-focus-color: transparent;"/>
            
            <Label text="Password:"
                   GridPane.rowIndex="1"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #424242;
                          -fx-font-weight: 500;"/>
            
            <PasswordField fx:id="passwordField"
                           promptText="Enter your password"
                           GridPane.columnIndex="1"
                           GridPane.rowIndex="1"
                           style="-fx-pref-height: 38px;
                                  -fx-background-color: #f8f9fa;
                                  -fx-background-radius: 6;
                                  -fx-border-color: #e0e0e0;
                                  -fx-border-radius: 6;
                                  -fx-border-width: 1;
                                  -fx-font-size: 14px;
                                  -fx-padding: 0 12 0 12;
                                  -fx-prompt-text-fill: #9e9e9e;
                                  -fx-focus-color: #2196F3;
                                  -fx-faint-focus-color: transparent;"/>
            
            <Label text="Role:"
                   GridPane.rowIndex="2"
                   style="-fx-font-size: 14px;
                          -fx-text-fill: #424242;
                          -fx-font-weight: 500;"/>
            
            <ComboBox fx:id="roleComboBox"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="2"
                      prefWidth="200"
                      promptText="Select your role"
                      style="-fx-pref-height: 38px;
                             -fx-background-color: #f8f9fa;
                             -fx-background-radius: 6;
                             -fx-border-color: #e0e0e0;
                             -fx-border-radius: 6;
                             -fx-border-width: 1;
                             -fx-font-size: 14px;"/>
            
            <!-- Login button -->
            <Button text="Sign In"
                    fx:id="loginButton"
                    GridPane.rowIndex="3"
                    GridPane.columnSpan="2"
                    GridPane.halignment="CENTER"
                    maxWidth="Infinity"
                    style="-fx-background-color: linear-gradient(to bottom, #2196F3 0%, #1976D2 100%);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 15px;
                           -fx-background-radius: 6;
                           -fx-padding: 12 40 12 40;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(33,150,243,0.4), 8, 0, 0, 2);
                           -fx-min-width: 200;">
                <GridPane.margin>
                    <Insets top="10"/>
                </GridPane.margin>
            </Button>
        </GridPane>
    </VBox>
    
    <!-- Footer -->
    <Label text="Â© 2024 School Management System"
           style="-fx-font-size: 11px;
                  -fx-text-fill: #757575;
                  -fx-padding: 10 0 0 0;"/>
    
</VBox>              