<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.school.controllers.ProfessorController"
      prefWidth="1000" prefHeight="700"
      fx:id="dashboardPane"
      style="-fx-background-color: #ecf0f1;">

    <!-- ==================== TOP BAR ==================== -->
    <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20">
        <VBox spacing="5">
            <Label text="ðŸ‘¨â€ðŸ« Welcome!" style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="welcomeLabel" text="Professor" style="-fx-font-size: 14; -fx-text-fill: #ecf0f1;"/>
            <Label fx:id="professorNameLabel" text="Name" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
            <Label fx:id="subjectLabel" text="Subject" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" text="LOGOUT" onAction="#handleLogout"  
                style="-fx-font-size: 12; -fx-padding: 10; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>
    </HBox>

    <!-- ==================== MAIN CONTENT ==================== -->
    <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" 
             style="-fx-padding: 15;" VBox.vgrow="ALWAYS">

        <!-- ==================== NOTES TAB ==================== -->
        <Tab fx:id="notesTab" text="ðŸ“Š Manage Grades" style="-fx-font-size: 12;" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Class Selection -->
                <VBox spacing="5" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f9f9f9;">
                    <Label text="ðŸ“š Select Class:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                    <ComboBox fx:id="classComboBox" prefWidth="300" style="-fx-font-size: 11;"/>
                </VBox>

                <!-- Input Section -->
                <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f0f8ff;">
                    <Label text="âœï¸ Enter Grade:" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <!-- Row 1: Student Selection -->
                    <HBox spacing="10">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Student:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="studentComboBox" prefWidth="200" style="-fx-font-size: 11;"/>
                        </VBox>
                    </HBox>

                    <!-- Row 2: Grade and Exam Type -->
                    <HBox spacing="10">
                        <VBox spacing="5" prefWidth="150">
                            <Label text="Grade (0-20):" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                            <TextField fx:id="noteValueField" promptText="Enter grade" 
                                       style="-fx-font-size: 11; -fx-padding: 8;"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Exam Type:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                            <ComboBox fx:id="examTypeComboBox" prefWidth="150" style="-fx-font-size: 11;"/>
                        </VBox>
                    </HBox>

                    <!-- Submit Button -->
                    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="submitNoteButton" text="ðŸ“ Submit Grade" 
                                style="-fx-font-size: 11; -fx-padding: 8 20 8 20; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
                        <Label fx:id="noteStatusLabel" text="" style="-fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                    </HBox>
                </VBox>

                <!-- Grades Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label text="ðŸ“‹ Student Grades:" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                   <TableView fx:id="notesTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
    <columns>
        <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="250"/>
        <TableColumn fx:id="noteValueColumn" text="Grade" prefWidth="100"/>
        <TableColumn fx:id="examTypeColumn" text="Exam Type" prefWidth="150"/>
    </columns>
    <contextMenu>
        <ContextMenu>
            <items>
                <MenuItem fx:id="editNoteMenuItem" text="âœï¸ Edit Grade"/>
                <MenuItem fx:id="deleteNoteMenuItem" text="ðŸ—‘ï¸ Delete Grade"/>
            </items>
        </ContextMenu>
    </contextMenu>
</TableView>
                </VBox>
            </VBox>
        </Tab>

        <!-- ==================== REPORTS TAB ==================== -->
        <Tab fx:id="reportsTab" text="ðŸ“‹ Reports" style="-fx-font-size: 12;" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">

                <!-- Report Input Section -->
                <VBox spacing="10" style="-fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ffe6e6;">
                    <Label text="ðŸ“¤ Create Student Report (Send to Admin):" 
                           style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>

                    <!-- Student Selection -->
                    <VBox spacing="5">
                        <Label text="Student:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="reportStudentComboBox" prefWidth="300" style="-fx-font-size: 11;"/>
                    </VBox>

                    <!-- Report Title -->
                    <VBox spacing="5">
                        <Label text="Report Title (Max 150 chars):" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                        <TextField fx:id="reportTitleField" promptText="Enter report title" 
                                   style="-fx-font-size: 11; -fx-padding: 8;"/>
                    </VBox>

                    <!-- Report Content -->
                    <VBox spacing="5" VBox.vgrow="ALWAYS">
                        <Label text="Report Content:" style="-fx-font-size: 11; -fx-font-weight: bold;"/>
                        <TextArea fx:id="reportContentArea" 
                                  promptText="Describe the student's situation, behavior, performance, etc..."
                                  wrapText="true" style="-fx-font-size: 11;" prefRowCount="4"/>
                    </VBox>

                    <!-- Submit Button -->
                    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <Button fx:id="submitReportButton" text="ðŸ“¤ Send Report to Admin" 
                                style="-fx-font-size: 11; -fx-padding: 8 20 8 20; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;"/>
                        <Label fx:id="reportStatusLabel" text="" style="-fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                    </HBox>
                </VBox>

                <!-- Reports Table -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label text="ðŸ“Š My Reports Sent to Admin:" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TableView fx:id="reportsTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
                        <columns>
                            <TableColumn fx:id="reportStudentColumn" text="Student Name" prefWidth="200"/>
                            <TableColumn fx:id="reportTitleColumn" text="Title" prefWidth="350"/>
                            <TableColumn fx:id="reportStatusColumn" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </Tab>
    </TabPane>
</VBox>