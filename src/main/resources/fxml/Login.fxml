<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.school.controllers.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #ffffff;"
      prefWidth="400" prefHeight="350">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="School Management System"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
 <Label text=""
 fx:id="messageLabel"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button text="Login"
                fx:id="loginButton"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"
                GridPane.rowIndex="2" GridPane.columnSpan="2"
                GridPane.halignment="CENTER"/>
    </GridPane>

    <!-- Spacer to push the ComboBox to the bottom -->
    <Region VBox.vgrow="ALWAYS"/>

    <!-- Role Selection at the bottom -->
    <HBox alignment="CENTER" spacing="10">
    <Label text="Login as:"/>
    <ComboBox fx:id="roleComboBox" prefWidth="150"/>
</HBox>
</VBox>