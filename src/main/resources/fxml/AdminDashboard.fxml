<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.school.controllers.AdminDashBoard" 
            prefHeight="700.0" 
            prefWidth="1200.0">
    
    <!-- Top Header with Logout Button -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10 20;">
            <children>
                <Label text="Admin Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="adminNameLabel" text="Admin" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <Button fx:id="logoutBtn" text="ðŸšª Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15;">
                    <HBox.margin>
                        <Insets left="10"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>
    
    <!-- Main Content Area -->
    <center>
        <TabPane>
            <tabs>
                
                <!-- Students Tab -->
                <Tab text="Students" closable="false">
                    <content>
                        <BorderPane style="-fx-padding: 20;">
                            <top>
                                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                                    <children>
                                        <Label text="Students List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Button fx:id="addStudentBtn" text="Add Student" onAction="#onAddStudent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="studentsTable" onMouseClicked="#onStudentClick" prefHeight="600.0">
                                    <columns>
                                        <TableColumn fx:id="studentCneCol" text="CNE" prefWidth="100.0"/>
                                        <TableColumn fx:id="studentFirstNameCol" text="First Name" prefWidth="120.0"/>
                                        <TableColumn fx:id="studentLastNameCol" text="Last Name" prefWidth="120.0"/>
                                        <TableColumn fx:id="studentEmailCol" text="Email" prefWidth="180.0"/>
                                        <TableColumn fx:id="studentPhoneCol" text="Phone" prefWidth="120.0"/>
                                        <TableColumn fx:id="studentClassCol" text="Class" prefWidth="100.0"/>
                                        <TableColumn fx:id="studentDobCol" text="Date of Birth" prefWidth="120.0"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Professors Tab -->
                <Tab text="Professors" closable="false">
                    <content>
                        <BorderPane style="-fx-padding: 20;">
                            <top>
                                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                                    <children>
                                        <Label text="Professors List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Button fx:id="addProfessorBtn" text="Add Professor" onAction="#onAddProfessor" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="professorsTable" onMouseClicked="#onProfessorClick" prefHeight="600.0">
                                    <columns>
                                        <TableColumn fx:id="profFirstNameCol" text="First Name" prefWidth="150.0"/>
                                        <TableColumn fx:id="profLastNameCol" text="Last Name" prefWidth="150.0"/>
                                        <TableColumn fx:id="profEmailCol" text="Email" prefWidth="200.0"/>
                                        <TableColumn fx:id="profSubjectCol" text="Subject" prefWidth="150.0"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Classes Tab -->
                <Tab text="Classes" closable="false">
                    <content>
                        <BorderPane style="-fx-padding: 20;">
                            <top>
                                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                                    <children>
                                        <Label text="Classes List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Button fx:id="addClassBtn" text="Add Class" onAction="#onAddClass" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="classesTable" onMouseClicked="#onClassClick" prefHeight="600.0">
                                    <columns>
                                        <TableColumn fx:id="classNameCol" text="Class Name" prefWidth="200.0"/>
                                        <TableColumn fx:id="classLevelCol" text="Level" prefWidth="100.0"/>
                                        <TableColumn fx:id="classCapacityCol" text="Capacity" prefWidth="100.0"/>
                                        <TableColumn fx:id="classMajorCol" text="Major" prefWidth="200.0"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Majors Tab -->
                <Tab text="Majors" closable="false">
                    <content>
                        <BorderPane style="-fx-padding: 20;">
                            <top>
                                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                                    <children>
                                        <Label text="Majors List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Button fx:id="addMajorBtn" text="Add Major" onAction="#onAddMajor" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="majorsTable" onMouseClicked="#onMajorClick" prefHeight="600.0">
                                    <columns>
                                        <TableColumn fx:id="majorCodeCol" text="Code" prefWidth="100.0"/>
                                        <TableColumn fx:id="majorNameCol" text="Name" prefWidth="200.0"/>
                                        <TableColumn fx:id="majorDescriptionCol" text="Description" prefWidth="300.0"/>
                                        <TableColumn fx:id="majorDurationCol" text="Duration (years)" prefWidth="150.0"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Subjects Tab -->
                <Tab text="Subjects" closable="false">
                    <content>
                        <BorderPane style="-fx-padding: 20;">
                            <top>
                                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                                    <children>
                                        <Label text="Subjects List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Button fx:id="addSubjectBtn" text="Add Subject" onAction="#onAddSubject" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="subjectsTable" onMouseClicked="#onSubjectClick" prefHeight="600.0">
                                    <columns>
                                        <TableColumn fx:id="subjectNameCol" text="Subject Name" prefWidth="300.0"/>
                                        <TableColumn fx:id="subjectCoefficientCol" text="Coefficient" prefWidth="150.0"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Reports Tab -->
                <Tab text="ðŸ“‹ Reports" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20;">
                        
                        <!-- Header Section -->
                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-radius: 5;">
                            <Label text="Student Reports Management" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            
                            <!-- Optional: Filter by Status -->
                            <Label text="Filter:" style="-fx-font-size: 12;"/>
                            <ComboBox fx:id="reportFilterCombo" prefWidth="150" style="-fx-font-size: 11;"/>
                            
                            <!-- Refresh Button -->
                            <Button text="ðŸ”„ Refresh" onAction="#loadReports" 
                                    style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;"/>
                        </HBox>
                        
                        <!-- Statistics Cards -->
                        <HBox spacing="15">
                            <VBox spacing="5" style="-fx-background-color: #fff3cd; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                <Label text="â³ Pending" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #856404;"/>
                                <Label fx:id="pendingCountLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #856404;"/>
                            </VBox>
                            
                            <VBox spacing="5" style="-fx-background-color: #d1ecf1; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                <Label text="ðŸ‘ Reviewed" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #0c5460;"/>
                                <Label fx:id="reviewedCountLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #0c5460;"/>
                            </VBox>
                            
                            <VBox spacing="5" style="-fx-background-color: #d4edda; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                <Label text="âœ… Resolved" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #155724;"/>
                                <Label fx:id="resolvedCountLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #155724;"/>
                            </VBox>
                        </HBox>
                        
                        <!-- Info Label -->
                        <Label text="Click on a report to view details and update status" 
                               style="-fx-font-size: 11; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
                        
                        <!-- Reports Table -->
                        <TableView fx:id="reportsTable" onMouseClicked="#onReportClick" VBox.vgrow="ALWAYS" 
                                   style="-fx-font-size: 11;">
                            <columns>
                                <TableColumn fx:id="reportStudentCol" text="Student" prefWidth="150"/>
                                <TableColumn fx:id="reportProfessorCol" text="Professor" prefWidth="150"/>
                                <TableColumn fx:id="reportTitleCol" text="Title" prefWidth="300"/>
                                <TableColumn fx:id="reportStatusCol" text="Status" prefWidth="100"/>
                                <TableColumn fx:id="reportCreatedAtCol" text="Created At" prefWidth="150"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        
                        <!-- Action Buttons -->
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Label fx:id="reportCountLabel" text="Total Reports: 0" style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="ðŸ“Š View Statistics" 
                                    style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #9b59b6; -fx-text-fill: white; -fx-cursor: hand;"/>
                        </HBox>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>