<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.school.controllers.StudentController"
            prefWidth="1000" prefHeight="700">

    <!-- ==================== LOGIN PANE ==================== -->
    <VBox fx:id="loginPane" prefWidth="1000" prefHeight="700" alignment="CENTER"
          style="-fx-background-color: #f5f5f5;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;"
              prefWidth="400" prefHeight="500">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Title -->
            <Label text="STUDENT LOGIN" alignment="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <VBox.margin>
                    <Insets bottom="20"/>
                </VBox.margin>
            </Label>

            <!-- Username -->
            <Label text="Username:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TextField fx:id="loginUsernameField" promptText="Enter your username" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox.margin>
                    <Insets bottom="15"/>
                </VBox.margin>
            </TextField>

            <!-- Password -->
            <Label text="Password:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <PasswordField fx:id="loginPasswordField" promptText="Enter your password" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox.margin>
                    <Insets bottom="15"/>
                </VBox.margin>
            </PasswordField>

            <!-- Error Message -->
            <Label fx:id="loginErrorLabel" text="" style="-fx-font-size: 12; -fx-text-fill: #ff6b6b; -fx-wrap-text: true;">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="LOGIN" style="-fx-font-size: 14; -fx-padding: 12; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 5; -fx-background-radius: 5;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>

    <!-- ==================== DASHBOARD PANE ==================== -->
    <VBox fx:id="dashboardPane" prefWidth="1000" prefHeight="700" visible="false"
          style="-fx-background-color: #ecf0f1;">

        <!-- Top Bar -->
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20">
            <VBox spacing="5">
                <Label text="Welcome!" style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="welcomeLabel" text="Student" style="-fx-font-size: 14; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="studentNameLabel" text="Name" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
                <Label fx:id="cneLabel" text="CNE" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
                <Label fx:id="classLabel" text="Class" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="LOGOUT" style="-fx-font-size: 12; -fx-padding: 10; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
        </HBox>

        <!-- Main Content -->
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">

            <!-- ==================== GRADES TAB ==================== -->
            <Tab fx:id="gradesTab" text="ðŸ“Š My Grades" style="-fx-font-size: 12;">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <!-- Subject Selection -->
                    <HBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f0f8ff;">
                        <Label text="Select Subject:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="subjectComboBox" prefWidth="250" style="-fx-font-size: 11;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="averageLabel" text="" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                    </HBox>

                    <!-- No Grades Message -->
                    <Label fx:id="noGradesLabel" text="" style="-fx-font-size: 12; -fx-text-fill: #95a5a6;"/>

                    <!-- Grades Table -->
                    <Label text="Grades History:" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                    <TableView fx:id="gradesTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
                        <columns>
                            <TableColumn fx:id="gradeValueColumn" text="Grade" prefWidth="100"/>
                            <TableColumn fx:id="examTypeColumn" text="Exam Type" prefWidth="150"/>
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="200"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- ==================== ATTESTATION REQUEST TAB ==================== -->
            <Tab fx:id="attestationTab" text="ðŸ“ Request Attestation" style="-fx-font-size: 12;">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <!-- Attestation Request Form -->
                    <VBox spacing="10" style="-fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ffe6e6;">
                        <Label text="Request Attestation (School Certificate):" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>

                        <VBox spacing="5">
                            <Label text="Request Type:" style="-fx-font-size: 11;"/>
                            <ComboBox fx:id="attestationTypeComboBox" prefWidth="300" style="-fx-font-size: 11;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Reason / Details:" style="-fx-font-size: 11;"/>
                            <TextArea fx:id="attestationReasonArea" 
                                     promptText="Explain why you need this attestation..."
                                     wrapText="true" 
                                     style="-fx-font-size: 11;" 
                                     prefRowCount="5"/>
                        </VBox>

                        <HBox spacing="10">
                            <Button fx:id="submitAttestationButton" text="ðŸ“¤ Submit Request" style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;"/>
                            <Label fx:id="attestationStatusLabel" text="" style="-fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                        </HBox>
                    </VBox>

                    <!-- Attestation Requests History -->
                    <Label text="My Attestation Requests:" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                    <TableView fx:id="attestationTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
                        <columns>
                            <TableColumn fx:id="attestationTypeColumn" text="Request Type" prefWidth="200"/>
                            <TableColumn fx:id="attestationStatusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="attestationDateColumn" text="Date Requested" prefWidth="200"/>
                        </columns>
                    </TableView>

                    <!-- Status Legend -->
                    <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                        <Label text="Status:" style="-fx-font-weight: bold;"/>
                        <HBox spacing="5">
                            <Label text="ðŸ”µ" style="-fx-font-size: 10;"/>
                            <Label text="PENDING - Being processed" style="-fx-font-size: 10;"/>
                        </HBox>
                        <HBox spacing="5">
                            <Label text="ðŸŸ¢" style="-fx-font-size: 10;"/>
                            <Label text="REVIEWED - Ready for pickup" style="-fx-font-size: 10;"/>
                        </HBox>
                        <HBox spacing="5">
                            <Label text="ðŸŸ¡" style="-fx-font-size: 10;"/>
                            <Label text="RESOLVED - Completed" style="-fx-font-size: 10;"/>
                        </HBox>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</AnchorPane>