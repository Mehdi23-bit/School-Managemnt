<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.school.controllers.ProfessorController"
            prefWidth="1000" prefHeight="700">

    <!-- ==================== LOGIN PANE ==================== -->
    <VBox fx:id="loginPane" prefWidth="1000" prefHeight="700" alignment="CENTER"
          style="-fx-background-color: #f5f5f5;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10;"
              prefWidth="400" prefHeight="500">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Title -->
            <Label text="PROFESSOR LOGIN" alignment="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <VBox.margin>
                    <Insets bottom="20"/>
                </VBox.margin>
            </Label>

            <!-- Username -->
            <Label text="Username:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TextField fx:id="loginUsernameField" promptText="Enter your username" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox.margin>
                    <Insets bottom="15"/>
                </VBox.margin>
            </TextField>

            <!-- Password -->
            <Label text="Password:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <PasswordField fx:id="loginPasswordField" promptText="Enter your password" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox.margin>
                    <Insets bottom="15"/>
                </VBox.margin>
            </PasswordField>

            <!-- Error Message -->
            <Label fx:id="loginErrorLabel" text="" style="-fx-font-size: 12; -fx-text-fill: #ff6b6b; -fx-wrap-text: true;">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="LOGIN" style="-fx-font-size: 14; -fx-padding: 12; -fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 5; -fx-background-radius: 5;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>

    <!-- ==================== DASHBOARD PANE ==================== -->
    <VBox fx:id="dashboardPane" prefWidth="1000" prefHeight="700" visible="false"
          style="-fx-background-color: #ecf0f1;">

        <!-- Top Bar -->
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;" spacing="20">
            <VBox spacing="5">
                <Label text="Welcome!" style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="welcomeLabel" text="Professor Name" style="-fx-font-size: 14; -fx-text-fill: #ecf0f1;"/>
                <Label fx:id="professorNameLabel" text="Name" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
                <Label fx:id="subjectLabel" text="Subject" style="-fx-font-size: 12; -fx-text-fill: #bdc3c7;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="LOGOUT" style="-fx-font-size: 12; -fx-padding: 10; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
        </HBox>

        <!-- Main Content -->
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">

            <!-- ==================== NOTES TAB ==================== -->
            <Tab fx:id="notesTab" text="ðŸ“Š Manage Grades" style="-fx-font-size: 12;">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <!-- Class Selection -->
                    <HBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f9f9f9;">
                        <Label text="Select Class:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="classComboBox" prefWidth="200" style="-fx-font-size: 11;"/>
                    </HBox>

                    <!-- Input Section -->
                    <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #f0f8ff;">
                        <Label text="Enter Grade:" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Student:" style="-fx-font-size: 11;"/>
                                <ComboBox fx:id="studentComboBox" prefWidth="150" style="-fx-font-size: 11;"/>
                            </VBox>
                            <VBox spacing="5" prefWidth="80">
                                <Label text="Grade (0-20):" style="-fx-font-size: 11;"/>
                                <TextField fx:id="noteValueField" promptText="15.5" style="-fx-font-size: 11;"/>
                            </VBox>
                            <VBox spacing="5" prefWidth="120">
                                <Label text="Exam Type:" style="-fx-font-size: 11;"/>
                                <ComboBox fx:id="examTypeComboBox" prefWidth="110" style="-fx-font-size: 11;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="10">
                            <Button fx:id="submitNoteButton" text="ðŸ“ Submit Grade" onAction="#handleSubmitNote" style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>
                            <Label fx:id="noteStatusLabel" text="" style="-fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                        </HBox>
                    </VBox>

                    <!-- Grades Table -->
                    <Label text="Student Grades:" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                    <TableView fx:id="notesTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
                        <columns>
                            <TableColumn fx:id="studentNameColumn" text="Student" prefWidth="200"/>
                            <TableColumn fx:id="noteValueColumn" text="Grade" prefWidth="80"/>
                            <TableColumn fx:id="examTypeColumn" text="Exam Type" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- ==================== REPORTS TAB ==================== -->
            <Tab fx:id="reportsTab" text="ðŸ“‹ Reports" style="-fx-font-size: 12;">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <!-- Report Input Section -->
                    <VBox spacing="10" style="-fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #ffe6e6;">
                        <Label text="Create Student Report (Send to Admin):" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #c0392b;"/>

                        <HBox spacing="10">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Student:" style="-fx-font-size: 11;"/>
                                <ComboBox fx:id="reportStudentComboBox" prefWidth="200" style="-fx-font-size: 11;"/>
                            </VBox>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Report Title:" style="-fx-font-size: 11;"/>
                            <TextField fx:id="reportTitleField" promptText="Enter report title (max 150 chars)" style="-fx-font-size: 11;"/>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Report Content:" style="-fx-font-size: 11;"/>
                            <TextArea fx:id="reportContentArea" promptText="Describe the student's situation, behavior, performance, etc..."
                                      wrapText="true" style="-fx-font-size: 11;" prefRowCount="6"/>
                        </VBox>

                        <HBox spacing="10">
                            <Button fx:id="submitReportButton" text="ðŸ“¤ Send Report to Admin" style="-fx-font-size: 11; -fx-padding: 8; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;"/>
                            <Label fx:id="reportStatusLabel" text="" style="-fx-font-size: 11; -fx-text-fill: #27ae60;"/>
                        </HBox>
                    </VBox>

                    <!-- Reports Table -->
                    <Label text="My Reports Sent to Admin:" style="-fx-font-size: 13; -fx-font-weight: bold;"/>
                    <TableView fx:id="reportsTableView" VBox.vgrow="ALWAYS" style="-fx-font-size: 11;">
                        <columns>
                            <TableColumn fx:id="reportStudentColumn" text="Student" prefWidth="150"/>
                            <TableColumn fx:id="reportTitleColumn" text="Title" prefWidth="300"/>
                            <TableColumn fx:id="reportStatusColumn" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </VBox>
</AnchorPane>