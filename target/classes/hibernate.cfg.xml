<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- ==================== Database Connection ==================== -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/schooldb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Oualid2005@</property>

        <!-- ==================== Dialect & Settings ==================== -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Show & format SQL in console (very helpful for learning) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Auto update schema (perfect for development) -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- ==================== THIS IS THE FIX YOU NEED ==================== -->
        <!-- Without this line â†’ "No CurrentSessionContext configured!" -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- ==================== Your Entity Classes (VERY IMPORTANT) ==================== -->
        <!-- If you forget these, Hibernate won't see your Student class! -->
        <mapping class="org.school.entities.Admin"/>
        <mapping class="org.school.entities.Student"/>
        <mapping class="org.school.entities.Classe"/>
        <mapping class="org.school.entities.Subject"/>
        <mapping class="org.school.entities.Professor"/>
        <mapping class="org.school.entities.Note"/>  
        <mapping class="org.school.entities.Major"/>   
        <mapping class="org.school.entities.Report"/> 
              <!-- Change if your package is different -->
        <!-- Add other entities here later, example: -->
        <!-- <mapping class="org.school.entity.Classe"/> -->
        <!-- <mapping class="org.school.entity.Professor"/> -->

    </session-factory>
</hibernate-configuration>